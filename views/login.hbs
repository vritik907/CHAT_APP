        <div class="flex-grid uk-width-expand">
        	<!-- this is illustration  -->
            <div class = "illustration-div">
        		<div class = "login-illustration uk-position-relative vw-50 uk-transition-toggle uk-light" tabindex="0">
            		<img id = "bg_img" class = "uk-animation-kenburns full-screen-image " src="images/bg.png" alt="" >
                	 <div class=" uk-position-relative left-position">
                    	<div class=" padding-2 uk-transition-slide-top-small"><h4 class=" color-dark uk-margin-remove">Welcome to </h4></div>
                    	<div class=" padding-4 uk-transition-slide-bottom-small"><h4 class="clg-name uk-margin-remove">My college or  UNIVERSITY</h4></div>
            		</div>
            	</div>
            </div>
            <!-- this is form  -->
            <div class = "login-form">
                <div class=" uk-border-rounded uk-animation-slide-right-medium login-div uk-card uk-card-default">
                    <div class="uk-card-body">
                        <form method = "POST" action = "/login">
                            <input type="hidden" name="csrf" value="{{csrf}}">
                            <div class="uk-margin">
                                {{#if (equal type "student")}}
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                                        {{#if context.student_id}}
                                        <input name = "identifierId" pattern="[0-9]+" title = "It must be numbers"  required="true" class=" login-input uk-input" type="text" placeholder="studentID or University roll no." value = "{{context.student_id}}">
                                        {{else}}
                                        {{#if context.university_roll_no}}
                                        <input name = "identifierId" pattern="[0-9]+" title = "It must be numbers"  required="true" class=" login-input uk-input" type="text" placeholder="studentID or University roll no." value="{{context.university_roll_no}}">
                                        {{else}}
                                            <input name = "identifierId" pattern="[0-9]+" title = "It must be numbers"  required="true" class=" login-input uk-input" type="text" placeholder="studentID or University roll no.">
                                        {{/if}}
                                        {{/if}}
                                    </div>
                                {{else}}
                                    <div class="uk-inline uk-width-1-1">
                                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                                        {{#if context.profname}}
                                        <input name = "profName" title = "It must be case sensitive name"  required="true" class=" login-input uk-input" type="text" placeholder="Proffesor name" value = "{{context.profname}}">
                                        {{else}}
                                            <input name = "profName" title = "It must be case sensitive name"  required="true" class=" login-input uk-input" type="text" placeholder="Proffesor name">
                                        {{/if}}
                                    </div>
                                {{/if}}
                            </div>
                            <a  href = "/get-email" class="uk-margin google-login-btn  uk-border-rounded  uk-width-1-1 ">
                                {{#if email_picture}}
                                <img class="google-icon" src="{{email_picture}}"/>
                                <h3 class = "medium-text google-login-btn-text">
                                    <strong>
                                        <span class="g-blue">C</span>
                                        <span class="o-red">h</span>
                                        <span class="o-yellow">a</span>
                                        <span class="g-blue">n</span>
                                        <span class="l-green">g</span>
                                        <span class="o-red e-red">e</span>

                                    </strong>
                                </h3>
                                {{else}}
                                 <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
                                <h3 class = "medium-text google-login-btn-text">
                                    <strong>
                                        <span class="g-blue">C</span>
                                        <span class="o-red">h</span>
                                        <span class="o-yellow">o</span>
                                        <span class="g-blue">o</span>
                                        <span class="l-green">s</span>
                                        <span class="o-red e-red">e</span>

                                    </strong>
                                </h3>
                                {{/if}}
                               

                            </a>

                            <button type = "submit" class="uk-border-rounded uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Login</button>
                        </form>
                        {{#if (equal type "student")}}
                            <a href="/login-staff" class="uk-border-rounded uk-button uk-button-danger uk-width-1-1 uk-margin-small-bottom">Login as a staff</a>
                            <a href="/create-account" class="full-width uk-border-rounded uk-display-block uk-card uk-card-body uk-card-default uk-link-toggle uk-width-medium">
                                <h3 class="uk-card-title"><span class="uk-link-heading">Create Account</span></h3>
                                <p class = "small-text">Create a new account. Our staff will review your request and provide you login credentials</p>
                            </a>
                        {{else}}
                              <a href="/" class="uk-border-rounded uk-button uk-button-danger uk-width-1-1 uk-margin-small-bottom">Login as a student</a>
                            <a href="/create-account" class=" uk-disabled full-width uk-border-rounded uk-display-block uk-card uk-card-body uk-card-default uk-link-toggle uk-width-medium">
                                <h3 class="uk-card-title "><span class="uk-link-heading">Create Account</span></h3>
                                <p class = "small-text">Create a new account. Our staff will review your request and provide you login credentials</p>
                            </a>
                        {{/if}}

                        
                    </div>
                </div>
            </div>
        </div>
